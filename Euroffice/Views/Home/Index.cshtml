@model IEnumerable<Euroffice.Services.Category>

<h2>Categories</h2>

<table class="table">
    <tr>
        <th>
            Id
        </th>
        <th>
            Name
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.ActionLink("Images", "Images", new { categoryName = item.name })
        </td>
    </tr>
    }

</table>